<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="UdpCommunication.MainPage">
    <ScrollView>
        <Grid
            ColumnDefinitions="*,*">
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25"
                Grid.Column="0">
                <Label
                    Text="本地ip端口" />
                <Editor
                    x:Name="LocalIpPortEditor"
                    IsReadOnly="True"></Editor>
                <Label
                    Text="目标ip端口" />
                <Editor
                    x:Name="RemotIpPortEditor"></Editor>
                <Label
                    Text="发送内容" />
                <Editor
                    x:Name="MessageEditor"></Editor>
                <Button
                    x:Name="SendMessageBtn"
                    Text="发送"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="SendMessageBtn_Clicked"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>
            <Grid
                Padding="30,0,30,30"
                Grid.Column="1">
                <Editor
                    x:Name="ReceiveMessageEditor"
                    IsReadOnly="True"></Editor>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
